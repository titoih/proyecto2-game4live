<div class="container">
<br>
<br>
	<div class="row" id="main">
        <div class="col-md-4 well" id="leftPanel">
            <div class="row">
                <div class="col-md-12">
                	<div>
                         {{#if session.imgPath}}<img src="{{session.imgPath}}" alt="Texto Alternativo" class="img-circle img-thumbnail">{{/if}}
        				{{#unless session.imgPath}} <img src="{{session.avatarURL}}" alt="Texto Alternativo" class="img-circle img-thumbnail">{{/unless}}
                              <h2>{{session.name}}</h2>
        			</div>
        		</div>
            </div>
        </div>
        <div class="col-md-8 well" id="rightPanel">
            <div class="row">
     <div class="col-md-12">
          <!-- FORM -->
          <form role="form" action="/player" method="POST" enctype="multipart/form-data">
		     <h2>Edit your profile.<small>It's always easy</small></h2>
			     <hr class="colorgraph">
			          <div class="row">
				          <div class="col-xs-12 col-sm-6 col-md-6">
					          <div class="form-group">
                                        <label for="inputNick">Nick</label>
                                             <input type="text" name="nick" id="first_name" class="form-control input-lg {{#if errors.nick}} is-invalid {{/if}}" placeholder="Nick" {{#if session.nick}} value="{{session.nick}}" {{/if}} tabindex="1">
							               <div class="invalid-feedback">
                                                       {{ errors.nick }}
                                                  </div>
                                   </div>
				          </div>
				          <div class="col-xs-12 col-sm-6 col-md-6">
					          <div class="form-group">
                                        <label for="inputNickName">Nick In Game</label>
						               <input type="text" name="nickInGame" id="last_name" class="form-control input-lg {{#if errors.nickInGame}} is-invalid {{/if}}" placeholder="Nick in Game" {{#if session.nickInGame}} value="{{session.nickInGame}}" {{/if}} tabindex="2">
					                         <div class="invalid-feedback">
                                                       {{ errors.nickInGame }}
                                                  </div>
                                   </div>
				          </div>
			          </div>
     <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6">
		     <div class="form-group">
                    <label for="inputCountry">Country</label>
                         <select name="country" id="inputCountry" class="form-control {{#if errors.country}} is-invalid {{/if}}">
                              {{#unless session.country}}<option select>Select Country</option>{{/unless}}
                              {{#if session.country}}<option selected>{{session.country}}</option>{{/if}}
                              <option value="Spain">Spain</option>
                              <option value="France">France</option>
                              <option value="Germany">Germany</option>
                         </select>
                         <div class="invalid-feedback">
                              {{ errors.country }}
                         </div>
               </div>
          </div>
     </div>
      <div class="row">
	     <div class="col-xs-12 col-sm-6 col-md-6">
			<div class="form-group">
                    <label for="inputGame">Game</label>
                         <select name="game" id="inputGame" class="form-control {{#if errors}} is-invalid {{/if}}">
                         {{#unless session.game}}<option select>Select Game</option>{{/unless}}
                         {{#if session.game}}<option selected>{{session.game}}</option>{{/if}}
                         <option>Fortnite</option>
                         <option>Clash Royale</option>
                         <option>CS:GO</option>
                         </select>
                              <div class="invalid-feedback">
                                   {{ errors.game }}
                               </div>
               </div>
		</div>
	</div>
     <input type="file" name="photo">
</div>
</div>
	<hr class="colorgraph">
	<div class="row">
	     <div class="col-xs-12 col-md-6"><button id="button-player-account" class="btn btn-primary" type="submit">Save</button></div>
	</div>
          <!-- FORM -->
          </form>
</div>
</div>
</div>
</div>
</div>       
</div>