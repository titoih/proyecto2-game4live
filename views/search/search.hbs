{{!-- players --}}
<div class="card-heading col-md-12 white center">
  <h2 >Search Criteria</h2>
</div>

{{!-- players --}}
<div class="background white"  style="center">

<form action="/search" method="GET">
  
     <div class="form-group col-md-2">
    <label for="inputNick">Nick</label>
    <input name="nick" type="text" class="form-control" id="inputNick" placeholder="Nick in game4life">
  </div>
    <div class="form-group col-md-2">
    <label for="inputNickName">Nick In Game</label>
    <input name="nickInGame" type="text" class="form-control" id="inputNickInGame" placeholder="His Nick inside the game">
  </div>
   <div class="form-group col-md-2">
      <label for="inputCountry">Country</label>
      <select name="country" id="inputCountry" class="form-control">
        <option selected>Country</option>
        <option>Spain</option>
        <option>France</option>
        <option>Germany</option>
      </select>
    </div>
      <div class="form-group col-md-2">
      <label for="inputGame">Game</label>
      <select name="game" id="inputGame" class="form-control">
        <option selected>Choose Worm!</option>
        <option>Fortnite</option>
        <option>Clash Royale</option>
        <option>CS:GO</option>
      </select>
    </div>
  
    <div class="form-group col-md-2">
      <label for="inputLevel">Level ingame</label>
      <input  name="levelInGame" type="text" class="form-control" id="inputLevel" placeholder="85">
    </div>
    <div class="form-group col-md-2">
      <label for="inputGoal">Goal</label>
      <select name="goal" id="inputGoal" class="form-control">
        <option selected>Choose Worm!</option>
        <option>Profesional</option>
        <option>Hardcore</option>
        <option>Casual</option>
      </select>
    </div>
  <div class="form-group col-md-2">
    <label for="languages">Language</label>
    <select id="inputLanguages" name="language" class="form-control">
    <option selected>Choose Worm!</option>
    <option>ES</option>
    <option>ENG</option>
    <option>RU</option>
    </select>
  </div>
<div class="form-group col-md-2">
<label for="schedule">Player schedule</label>
<select class="custom-select" name="schedule">
<option selected>Game Schedule</option>
<option>Morning</option>
<option>Afternoon</option>
<option>Night</option>
</select>
</div>
<div class="form-group col-md-12">
  <button type="reset" class="btn btn-warning">Reset</button>
  <button type="submit" class="btn btn-primary btn-md">Search</button>
</form>
</div>
{{!-- ss --}}
 
{{#if error}}
  <div style="border:red solid 2px">{{error.message}}</div>
{{/if}} 
{{#if players}}
  <div class="card-heading col-md-12 headerCards center" >
    <h2>Results</h2>
  </div>
{{/if}} 
{{#unless players}}
  <div class="alert alert-warning" role="alert" style='margin-top:350px'>
    <strong>No results</strong> try another criteria or go fuck yourself
  </div>
{{/unless}} 
<div class='fondo2'>
  {{!-- segunda parte --}}
  {{#each players as |player|}}
    <div class="cards">
     <div class="panel panel-default" style="background:grey">
      <div style="background:rgba(56, 55, 55, 0.555)" class="panel-heading font-weight-bold center"><a href="/player/{{player._id}}">{{player.nick}}</a></div>
       {{#if avatarURL}}<div class="panel-body b"><img class="avatar img-circle" src="{{player.avatarURL}}"> </div>{{/if}} 
       {{#unless avatarURL}}<div class="panel-body b"><img class="avatar img-circle"src="../img/watgranma.jpg"> </div>{{/unless}} 
        <div class="panel-body"><a class="b">Nick In Game:</a> {{player.nickInGame}} </div>
        <div class="panel-body"><a class="b">Country:</a> {{player.country}}</div>
        <div class="panel-body "> <a class="b">Game:</a> {{player.game}} </div>
        <div><a class="btn btn-primary btn-block" style="" href="/player/{{player._id}}">View profile</a></div>
     </div>
    </div>
  {{/each}}
  </div>
</div>
